@model K_Box_project.Pages.KontaktaOssModel
@{
}

<section id="KontaktOss"
         style="background-color: mistyrose;
            background-image: url('assets/img/MenyPattern.png');
            background-size: 80%;
            height: 100%;
            background-repeat: no-repeat;
            background-position-x: center;
            background-position-y: 40px;">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h1 style="color: #f55161; margin-top: 80px;" id="Title-H1">KONTAKTA OSS</h1>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque placerat ullamcorper ligula nec elementum. Aenean fermentum pellentesque rutrum.</p>
        </div>
        <div class="p-4 container bg-white shadow-sm kontakt-oss" style="margin-bottom: 80px;">
            <form action="forms/contact.php" method="post" role="form" class="col-lg-12 php-email-form">
                <div class="row">
                    <div class="col form-group">
                        <input type="text" name="name" class="form-control" id="name" placeholder="Ditt Namn" required>
                    </div>
                    <div class="col form-group">
                        <input type="email" class="form-control" name="email" id="email" placeholder="Ditt E-post" required>
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="subject" id="subject" placeholder="Titel" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="message" rows="5" placeholder="Meddelande" required></textarea>
                </div>
                <div class="my-3">
                    <div class="loading">Loading</div>
                    <div class="error-message"></div>
                    <div class="sent-message">Your message has been sent. Thank you!</div>
                </div>
                <div class="text-center" style="font-size: 16px;"><button type="submit">Skicka</button></div>
            </form>
        </div>
    </div>
</section>