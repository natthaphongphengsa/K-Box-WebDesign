@page
@model K_Box_project.Pages.PreviewModel
@{
}
<section id="BokaNu">
    <div class="container" data-aos="fade-up">
        <h1 id="Title-H1" class="text-center">BOKA TID</h1>
        <div class="progresses py-4">
            <ul class="d-flex align-items-center justify-content-between">
                <li id="step-1" class="blue"></li>
                <li id="step-2" class="blue"></li>
                <li id="step-3"></li>
            </ul>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="d-flex row overflow-hidden pt-2" style="max-height:500px;">
            <img src="@Model.Image" class="rounded" />
        </div>
        <div class="container pt-3">
            <h3>Totalt tid: @ViewBag.Totalttime h</h3>
            <div class="row align-items-start">
                <div class="col">
                    <p>
                        Plats*
                        <br />
                        @Model.Stad
                    </p>
                </div>
                <div class="col">
                    <p>
                        Datum*
                        <br />
                        @Model.Date.Value.ToString("D")
                    </p>
                </div>
                <div class="col">
                    <p>
                        Rumtyp*
                        <br />
                        @Model.Rum
                    </p>
                </div>
            </div>
            <div class="row align-items-end" style="height:125px;">
                <div class="col">
                    <p>
                        Start tid*
                        <br />
                        @Model.TimeStart.ToString("t")
                    </p>
                </div>
                <div class="col">
                    <p>
                        Slut tid*
                        <br />
                        @Model.TimeEnd.ToString("t")
                    </p>
                </div>
                <div class="col">
                    <p>
                        Antal personner*
                        <br />
                        @Model.People
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="container d-flex justify-content-center">
        <a asp-page="/Paymnet" class="btn text-success bg-white btn-success" style="border: 3px solid; border-radius: 16px; padding:0px 12px 0px 12px ;">Slutför</a>
        <a href='javascript:history.go(-1)' class="btn text-success bg-white btn-success" style="border: 3px solid; border-radius: 16px; padding:0px 12px 0px 12px ;">Tillbaka</a>
    </div>    
</section>
