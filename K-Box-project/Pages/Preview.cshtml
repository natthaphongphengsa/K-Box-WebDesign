@page
@model K_Box_project.Pages.PreviewModel
@{
}
<section id="BokaNu" class="BokaNu" style="padding:140px 0px 100px 0px;">
    <div class="container" data-aos="fade-up" >
        <h1 id="Title-H1" class="text-center">BOKA TID</h1>
        <div class="progresses py-4">
            <ul class="d-flex align-items-center justify-content-between">
                <li id="step-1" class="blue"></li>
                <li id="step-2" class="blue"></li>
                <li id="step-3"></li>
            </ul>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        <div class="d-flex row overflow-hidden" style="height:400px;padding-top:60px;">
            <img src="@Model.Image" class="rounded" alt="@Model.Rum"/>
        </div>
        <div class="container pt-3">
            <h2>Totalt tid: @ViewBag.Totalttime h</h2>
            <div class="row align-items-start">
                <div class="col">
                    <p>
                        Plats*
                        <br />
                        @Model.Stad
                    </p>
                </div>
                <div class="col">
                    <p>
                        Datum*
                        <br />
                        @Model.Date.Value.ToString("D")
                    </p>
                </div>
                <div class="col">
                    <p>
                        Rumtyp*
                        <br />
                        @Model.Rum
                    </p>
                </div>
            </div>
            <div class="row align-items-end">
                <div class="col">
                    <p>
                        Start tid*
                        <br />
                        @Model.TimeStart.ToString("t")
                    </p>
                </div>
                <div class="col">
                    <p>
                        Slut tid*
                        <br />
                        @Model.TimeEnd.ToString("t")
                    </p>
                </div>
                <div class="col">
                    <p>
                        Antal personner*
                        <br />
                        @Model.People
                    </p>
                </div>
            </div>
            <br />
            <hr />
            <label class="h3" style=" color: #3f1e87; ">KONTAKTUPPGIFTER</label>
            <div class="row align-items-end">
                <div class="col">
                    <p>
                        Förnamn*
                        <br />
                        @Model.Firstname
                    </p>
                </div>
                <div class="col">
                    <p>
                        Efternamn*
                        <br />
                        @Model.Lastname
                    </p>
                </div>
            </div>
            <div class="row align-items-end">
                <div class="col">
                    <p>
                        E-post*
                        <br />
                        @Model.Epost
                    </p>
                </div>
                <div class="col">
                    <p>
                        Mobil*
                        <br />
                        @Model.Mobil
                    </p>
                </div>
            </div>
            <div class="row align-items-end">
                <div class="col">
                    <p>
                        Meddelande(Frivillig)*
                        <br />
                        @Model.Message
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="container d-flex justify-content-center p-2" style="padding-top: 50px;">
        <a asp-page="/Payment" class="btn text-success bg-white btn-success" id="submit" style="margin-top: 50px;">Slutför</a>
    </div>   
    <div class="container d-flex justify-content-center p-2">
        <a href='javascript:history.go(-1)' class="btn text-black bg-white btn-dark" id="submit">Tillbaka</a>
    </div>
</section>
